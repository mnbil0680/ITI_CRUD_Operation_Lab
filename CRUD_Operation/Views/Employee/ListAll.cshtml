@model List<CRUD_Operation.Models.Employee>
@{
    ViewData["Title"] = "All Employees";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">
                <i class="bi bi-people-fill me-3"></i>
                All Employees
            </h1>
            <p class="text-muted mb-0">Comprehensive list of all employees in the system</p>
        </div>
        <div class="page-actions">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Add New Employee
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
            </a>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-primary">
                <i class="bi bi-people"></i>
            </div>
            <div class="stat-info">
                <h3>@(Model?.Count ?? 0)</h3>
                <p>Total Employees</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-success">
                <i class="bi bi-building"></i>
            </div>
            <div class="stat-info">
                <h3>@(Model?.Where(e => e.Department != null).Select(e => e.Department.Name).Distinct().Count() ?? 0)</h3>
                <p>Departments</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-warning">
                <i class="bi bi-kanban"></i>
            </div>
            <div class="stat-info">
                <h3>@(Model?.Where(e => e.Project != null).Select(e => e.Project.Name).Distinct().Count() ?? 0)</h3>
                <p>Active Projects</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-info">
                <i class="bi bi-calendar-event"></i>
            </div>
            <div class="stat-info">
                <h3>@(Model != null && Model.Any() ? Model.Average(e => e.Age).ToString("F0") : "0")</h3>
                <p>Average Age</p>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filter Section -->
<!-- Search and Filter Section -->
<div class="table-controls mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="search-box">
                <input type="text" id="searchInput" class="form-control" placeholder="Search employees...">
                <i class="bi bi-search search-icon"></i>
            </div>
        </div>
        <div class="col-md-3">
            <select id="departmentFilter" class="form-select">
                <option value="">All Departments</option>
                @if (Model != null && Model.Any())
                {
                    @foreach (var dept in Model.Where(e => e.Department != null).Select(e => e.Department.Name).Distinct().OrderBy(d => d))
                    {
                        <option value="@dept">@dept</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <select id="positionFilter" class="form-select">
                <option value="">All Positions</option>
                @if (Model != null && Model.Any())
                {
                    @foreach (var position in Model.Select(e => e.Position).Distinct().OrderBy(p => p))
                    {
                        <option value="@position">@position</option>
                    }
                }
            </select>
        </div>
    </div>
</div>

<!-- Employee Table -->
<div class="table-container">
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover modern-table mb-0" id="employeeTable">
                        <thead class="table-header">
                            <tr>
                                <th scope="col">
                                    <i class="bi bi-person me-1"></i>Employee
                                </th>
                                <th scope="col">
                                    <i class="bi bi-hash me-1"></i>Employee #
                                </th>
                                <th scope="col">
                                    <i class="bi bi-envelope me-1"></i>Contact
                                </th>
                                <th scope="col">
                                    <i class="bi bi-briefcase me-1"></i>Position
                                </th>
                                <th scope="col">
                                    <i class="bi bi-building me-1"></i>Department
                                </th>
                                <th scope="col">
                                    <i class="bi bi-calendar me-1"></i>Hire Date
                                </th>
                                <th scope="col">
                                    <i class="bi bi-currency-dollar me-1"></i>Salary
                                </th>
                                <th scope="col">
                                    <i class="bi bi-gear me-1"></i>Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    <!-- Employee Info -->
                                    <td>
                                        <div class="employee-info">
                                            <div class="employee-avatar">
                                                @if (!string.IsNullOrEmpty(employee.ImagePath))
                                                {
                                                    <img src="@employee.ImagePath" alt="@employee.FirstName @employee.LastName" />
                                                }
                                                else
                                                {
                                                    <div class="avatar-placeholder">
                                                        @employee.FirstName.First()@employee.LastName.First()
                                                    </div>
                                                }
                                            </div>
                                            <div class="employee-details">
                                                <strong>@employee.FirstName @employee.LastName</strong>
                                                <small class="text-muted d-block">Age: @employee.Age</small>
                                            </div>
                                        </div>
                                    </td>

                                    <!-- Employee Number -->
                                    <td>
                                        <span class="badge bg-primary">@employee.EmployeeNumber</span>
                                    </td>

                                    <!-- Contact -->
                                    <td>
                                        <div class="contact-info">
                                            <div class="mb-1">
                                                <i class="bi bi-envelope text-muted me-1"></i>
                                                <a href="mailto:@employee.Email" class="text-decoration-none">@employee.Email</a>
                                            </div>
                                            <div>
                                                <i class="bi bi-telephone text-muted me-1"></i>
                                                <a href="tel:@employee.PhoneNumber" class="text-decoration-none">@employee.PhoneNumber</a>
                                            </div>
                                        </div>
                                    </td>

                                    <!-- Position -->
                                    <td>
                                        <span class="badge bg-info position-badge">@employee.Position</span>
                                    </td>

                                    <!-- Department -->
                                    <td>
                                        @if (employee.Department != null)
                                        {
                                            <span class="badge bg-success department-badge">@employee.Department.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not Assigned</span>
                                        }
                                    </td>

                                    <!-- Hire Date -->
                                    <td>
                                        <span class="text-muted">@employee.HireDate.ToString("MMM dd, yyyy")</span>
                                        <small class="d-block text-muted">
                                            @Math.Round((DateTime.Now - employee.HireDate).TotalDays / 365.25, 1) years
                                        </small>
                                    </td>

                                    <!-- Salary -->
                                    <td>
                                        <strong class="text-success">$@employee.Salary.ToString("N0")</strong>
                                    </td>

                                    <!-- Actions -->
                                    <td>
                                        <div class="action-buttons">
                                            <a asp-action="Details" asp-route-id="@employee.ID"
                                               class="btn btn-sm btn-outline-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@employee.ID"
                                               class="btn btn-sm btn-outline-warning" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@employee.ID"
                                               class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-people display-1 text-muted"></i>
                    <h3 class="mt-3">No Employees Found</h3>
                    <p class="text-muted">Start by adding your first employee to the system.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Add First Employee
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Table Info -->
@if (Model != null && Model.Any())
{
    <div class="table-info mt-3">
        <div class="row">
            <div class="col-md-6">
                <small class="text-muted">
                    Showing <span id="shownCount">@Model.Count</span> of @Model.Count employees
                </small>
            </div>
            <div class="col-md-6 text-end">
                <small class="text-muted">
                    Last updated: @DateTime.Now.ToString("MMM dd, yyyy HH:mm")
                </small>
            </div>
        </div>
    </div>
}


<!-- Custom Styles -->
<style>
